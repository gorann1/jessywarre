<h1>Listing articles</h1>
<div data-controller="pagination">
  <% @articles.each do |article| %>
    <article>
      <h2><%= article.title %></h2>
      <p><%= article.text %></p>
    </article>
  <% end %>
  <% unless @page.last? %>
    <%= link_to "Next page",
                articles_path(page: @page.next_param),
                data: { pagination_target: "nextPageLink" },
                style: "visibility: hidden;" %>
  <% end %>
</div>
